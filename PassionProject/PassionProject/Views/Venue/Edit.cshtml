@model PassionProject.Models.VenueDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Venue</h2>
<form action="/Venue/Update/@Model.VenueId" method="POST">
    <div style="display:none;">
        <input type="text" name="VenueId" value="@Model.VenueId" />
    </div>
    <div>
        <label>Venue Name: </label> <input type="text" name="VenueName" id="VenueName" value="@Model.VenueName" />
    </div>
    <div>
        <label>Location:</label> <input type="text" name="Location" id="Location" value="@Model.Location" />
    </div>

    <div>
        <label>Capacity</label> <input type="number" name="Capacity" id="Capacity" value="@Model.Capacity" />
    </div>
    <div>
    <input type="submit" value="Update Venue" />
    </div>
</form>

